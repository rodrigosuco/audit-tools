<div>
  <% if notice.present? || alert.present? %>
    <p class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
      <%= notice || alert %>
    </p>
  <% end %>
  <h1 class="font-bold text-2xl mb-4">Welcome, <%= current_user.name %>!</h1>
  <hr>
  <div class="flex mt-4 space-x-2">
    <a href="/proposals?q[title_or_status_cont]=onhold&button=" class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
      <h5 class="mb-2 font-bold tracking-tight text-gray-800">On-hold proposals:</h5>
      <p class="font-normal text-gray-700 text-center"><%= @onhold_proposals %></p>
    </a>
    <a href="/proposals?q[title_or_status_cont]=approved&button=" class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
      <h5 class="mb-2 font-bold tracking-tight text-gray-800">Approved proposals:</h5>
      <p class="font-normal text-gray-700 text-center"><%= @approved_proposals %></p>
    </a>
    <a href="/proposals?q[title_or_status_cont]=rejected&button=" class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
      <h5 class="mb-2 font-bold tracking-tight text-gray-800">Rejected proposals:</h5>
      <p class="font-normal text-gray-700 text-center"><%= @rejected_proposals %></p>
    </a>
    <a href="/proposals?q[title_or_status_cont]=cancelled&button=" class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
      <h5 class="mb-2 font-bold tracking-tight text-gray-800">Cancelled proposals:</h5>
      <p class="font-normal text-gray-700 text-center"><%= @cancelled_proposals %></p>
    </a>
    <a href="/proposals?q[title_or_status_cont]=client_review&button=" class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
      <h5 class="mb-2 font-bold tracking-tight text-gray-800">Client Review proposals:</h5>
      <p class="font-normal text-gray-700 text-center"><%= @rejected_proposals %></p>
    </a>
  </div>
</div>
