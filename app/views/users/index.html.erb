<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert"><%= notice %></p>
  <% end %>

  <% content_for :title, "Users" %>

  <div class="flex justify-between mb-6">
    <h1 class="text-2xl font-bold">Users</h1>
    <%= button_to "New user", new_user_path, method: :get, class: 'text-gray-900 bg-green-500 focus:outline-none hover:bg-green-100 focus:ring-1 focus:ring-green-100 font-medium rounded-lg text-sm px-5 py-2.5 mb-2' %>
  </div>

  <div class="space-y-4" id="users">
    <% @users.each do |user| %>
      <div class="bg-white shadow-md rounded-lg p-6 flex justify-between items-center">
        <div class="flex flex-col">
          <p class="text-lg font-semibold mb-2">
            <%= user.name %>
          </p>
          <p class="text-sm text-gray-500 mb-1">
            <strong>Email:</strong>
            <%= user.email %>
          </p>
          <!-- Add any other user details you'd like to display -->
        </div>

        <div class="ml-6">
          <%= button_to "Show this user", user, method: :get, class: 'text-gray-900 bg-white focus:outline-none hover:bg-gray-100 focus:ring-1 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 mb-2' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
