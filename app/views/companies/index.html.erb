<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert"><%= notice %></p>
  <% end %>

  <% content_for :title, "Companies" %>

  <div class="flex justify-between">
  <h1 class="text-2xl font-bold mb-6">Companies List</h1>
    <%= button_to "New company", new_company_path, method: :get, class: 'success-button' %>
  </div>

  <div class="space-y-4">
    <% @companies.each do |company| %>
      <div class="bg-white shadow-md rounded-lg p-6 flex justify-between items-center">
        <div class="flex flex-col">
          <h2 class="text-lg font-semibold mb-2"><%= company.legal_name %></h2>
          <p class="text-sm text-gray-500"><strong>CNPJ:</strong> <%= company.cnpj %></p>
          <p class="text-sm text-gray-500"><strong>City:</strong> <%= company.city %></p>
        </div>

        <div class="flex flex-col items-end">
          <p class="text-sm text-gray-500 mb-2"><strong>Sales Name:</strong> <%= company.sales_name %></p>
          <p class="text-sm text-gray-500 mb-2"><strong>Scope:</strong> <%= company.scope %></p>
          <p class="text-sm text-gray-500"><strong>Contact:</strong> <%= company.contact_name %> - <%= format_phone company.contact_phone %></p>
        </div>

        <div class="ml-6">
          <%= button_to "Details", company, method: :get, class: 'card-button' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="flex justify-end mt-6">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
