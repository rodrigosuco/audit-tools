<div class="container mx-auto px-4 py-8">
  <%= form_with(model: company, local: true) do |form| %>
    <% if company.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 p-4 mb-4 rounded-lg">
        <h2 class="font-bold"><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>
        <ul class="list-disc list-inside">
          <% company.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :legal_name, class: "block font-semibold mb-1" %>
          <%= form.text_field :legal_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :sales_name, class: "block font-semibold mb-1" %>
          <%= form.text_field :sales_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :cnpj, class: "block font-semibold mb-1" %>
          <%= form.text_field :cnpj, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :street, class: "block font-semibold mb-1" %>
          <%= form.text_field :street, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :number, class: "block font-semibold mb-1" %>
          <%= form.number_field :number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :compliment, class: "block font-semibold mb-1" %>
          <%= form.text_field :compliment, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :neighborhood, class: "block font-semibold mb-1" %>
          <%= form.text_field :neighborhood, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :city, class: "block font-semibold mb-1" %>
          <%= form.text_field :city, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :state, class: "block font-semibold mb-1" %>
          <%= form.text_field :state, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :country, class: "block font-semibold mb-1" %>
          <%= form.text_field :country, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :scope, class: "block font-semibold mb-1" %>
          <%= form.text_area :scope, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :contact_name, class: "block font-semibold mb-1" %>
          <%= form.text_field :contact_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :contact_phone, class: "block font-semibold mb-1" %>
          <%= form.text_field :contact_phone, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= form.label :contact_email, class: "block font-semibold mb-1" %>
          <%= form.text_field :contact_email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>
      </div>

      <div class="flex space-x-4 mt-6">
        <%= link_to "Back to companies", companies_path, class: 'text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-full text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700' %>

        <%= form.submit "Submit", class: 'text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-full text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700' %>
      </div>
    </div>
  <% end %>
</div>
