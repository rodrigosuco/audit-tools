<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Standard Details</h1>
    <div class="flex justify-end space-x-4 mt-6">
      <%= button_to "Back to standards", standards_path, method: :get, class: 'default-button' %>
      <%= button_to "Edit this standard", edit_standard_path(@standard), method: :get, class: 'default-button' %>
      <%= button_to "Destroy this standard", @standard, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: 'danger-button' %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="mb-4">
      <h2 class="text-lg font-semibold mb-2">Standard Name</h2>
      <p class="text-gray-700"><strong>Name:</strong> <%= @standard.name %></p>
    </div>
  </div>
</div>
