<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert"><%= notice %></p>
  <% end %>

  <% content_for :title, "Standards" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Standards List</h1>
    <%= button_to "New standard", new_standard_path, method: :get, class: 'success-button' %>
  </div>

  <div class="space-y-4">
    <% @standards.each do |standard| %>
      <div class="bg-white shadow-md rounded-lg p-6 flex justify-between items-center">
        <div>
          <h2 class="text-lg font-semibold mb-2"><%= standard.name %></h2>
        </div>

        <div class="ml-6">
          <%= button_to "Show this standard", standard, method: :get, class: 'default-button' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="flex justify-end mt-6">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
