<div data-controller="schedule">
  <%= month_calendar(events: @proposal.items) do |date, items| %>
    <div>
      <span><%= format_date date %></span>
      <%= link_to 'Schedule', '#', data: { action: "schedule#showModal" }, class: 'bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400' %>
    </div>
    <% items.each do |audit_item| %>
      <div>
        <%= audit_item.stage %>
      </div>
    <% end %>
  <% end %>

  <div data-schedule-target="modal" class="fixed inset-0 overflow-y-auto hidden z-50">
    <div class="fixed inset-0 bg-black bg-opacity-50" data-action="click->schedule#hideModal"></div>

    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-lg transform transition-all sm:max-w-lg sm:w-full">
        <div class="px-6 py-5">
          <h3 class="text-xl leading-6 font-semibold text-gray-900">Scheduling:</h3>
          <%= @item.stage %>
          <div class="mt-4">
            <p class="text-sm text-gray-500">Confirm and send scheduling confirmation to auditor and company?</p>
            <p class="text-sm text-gray-500">Company contact: <%= @proposal.company.contact_name %></p>
          </div>
        </div>
        <div class="px-6 py-4 sm:flex sm:flex-row-reverse">
          <%= link_to "Confirm", schedule_proposal_item_path(@proposal, @item), class: "w-full sm:w-auto inline-flex justify-center rounded-md shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 sm:ml-3 sm:text-sm" %>
          <button data-action="schedule#hideModal" type="button" class="mt-3 sm:mt-0 w-full sm:w-auto inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 sm:text-sm">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
